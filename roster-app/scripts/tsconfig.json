{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "../lib/**/*.ts",
    "../models/**/*.ts",
    "../types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}